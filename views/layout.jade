doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='theme-color' content='#4DA5F4')
    meta(name='csrf-token', content=_csrf)
    title #{title} - Hackathon Starter
    link(rel='shortcut icon', href='/favicon.png')
    link(rel='stylesheet', href='/css/main.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.8.0/fullcalendar.min.css')
    link(rel='stylesheet', media="print", href='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.8.0/fullcalendar.print.css')

  body
    include partials/header

    .container
      include partials/flash
      block userHeader
        if (title == 'User Profile' || title == 'Account Management')
          ul.nav.nav-tabs
            li(class=(title == 'User Profile') ? 'active' : undefined)
              a(href="/account/profile") Profile
            li(class=(title == 'Account Management') ? 'active' : undefined)
              a(href="/account") Settings
      block teamHeader
        if (title == 'Team Profile' || title == 'Team Settings' || title == 'Team Members')
          ul.nav.nav-tabs
            li(class=(title == 'Team Profile') ? 'active' : undefined)
              a(href="/team/profile") Profile
            li(class=(title == 'Team Members') ? 'active' : undefined)
              a(href="/team/members") Members
            //- if owner
            li(class=(title == 'Team Settings') ? 'active' : undefined)
              a(href="/team/account") Settings
      block content

    include partials/footer


    script(src='https://cdn.socket.io/socket.io-1.2.0.js')
    script(src='/js/lib/jquery-2.2.0.min.js')
    script(src='https://code.jquery.com/ui/1.11.4/jquery-ui.min.js')
    script(src='/js/lib/bootstrap.min.js')
    script(src='/js/lib/moment.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.8.0/fullcalendar.min.js')
    script(src='/js/main.js')

